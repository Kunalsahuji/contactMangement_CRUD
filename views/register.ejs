<%- include('./partials/header') %>
    <h1 class="w-[50%] m-auto mt-10 font-bold border-slate-950 text-xl  text-center border rounded-2xl p-3">
        Welocme to the Contact Mangement Register Portal 🙏</h1>
    <hr class="mt-10">

    <div
        class="w-[60%] m-auto text-center text-white-200 text-xl bg-sky-200 h-[62vh] rounded-2xl border border-slate-950 ">
        <form class="text-2xl px-5 flex flex-col w-[50%] m-auto" action="/register" method="post">
            <h1 class="mt-3 p-3  text-zinc-600"> Enter your details here...</h1>
            <input class="p-3 bg-zinc-200 border rounded-full text-center mt-5" type="text"
                placeholder="Enter your name: " name="name"> <br>
            <input class="p-3 bg-zinc-200 border rounded-full text-center" type="email" placeholder="Enter your email: "
                name="email"> <br>
            <input class="p-3 bg-zinc-200 border rounded-full text-center" type="number"
                placeholder="Enter your phone number" name="phone"> <br>
            <button class="border border-slate-950 rounded-full px-10 py-3 m-auto  w-[65%]">Submit Details</button>
        </form>
    </div>


    <%- include("./partials/footer") %>